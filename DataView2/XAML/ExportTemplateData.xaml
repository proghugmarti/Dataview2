<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DataView2.ExportTemplateData"
                Size="350,250"
            Color="White"
            CanBeDismissedByTappingOutsideOfPopup="False">

    <Border
    x:Name="popupBorder"
    Stroke="Gray"
    StrokeThickness="0.5"
    HorizontalOptions="Center">
        

        <Grid HorizontalOptions="Fill" VerticalOptions="Fill">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0" x:Name="titleBar1" Padding="10" BackgroundColor="#f0f0f0" Orientation="Horizontal" VerticalOptions="Center">
                <Label Text="Export Templated Data" Margin="5"/>
                <BoxView HorizontalOptions="FillAndExpand" />
                <Button Text="&#xe30a;" FontFamily="calcite-ui-icons-24" 
            TextColor="Black" Background="Transparent" BorderColor="Transparent"
            FontSize="20" Clicked="btnClose_Clicked" />
            </StackLayout>

            <HorizontalStackLayout Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Background="Transparent" Margin="5">
                <Picker Margin="5" x:Name="DbPicker" WidthRequest="200"></Picker>
                <Button Margin="5" Text="Select Database" x:Name="btnExportDb" Clicked="btnExportDb_Clicked"></Button>
            </HorizontalStackLayout>

            <HorizontalStackLayout Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" Background="Transparent" Margin="5">
                <Picker Margin="5" Loaded="Picker_Loaded" x:Name="TemplatePicker" IsVisible="False"></Picker>
                <Button Margin="5" Text="Export Data" x:Name="btnExportData" Clicked="btnExportData_Clicked"></Button>
            </HorizontalStackLayout>

            <Label x:Name="lblMessage" Margin="5" Grid.Row="3" HorizontalOptions="Fill" HorizontalTextAlignment="Center" VerticalOptions="Center" VerticalTextAlignment="Center"></Label>
        </Grid>
    </Border>
</toolkit:Popup>
