<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:DataView2.XAML"
             xmlns:pages="clr-namespace:DataView2.Pages.Dataset"

             xmlns:viewModel="clr-namespace:DataView2.ViewModels"
             x:Class="DataView2.XAML.ProjectPopup">
    <toolkit:Popup.Resources>
        <Style TargetType="{x:Type local:ProjectPopup}">
            <Setter Property="Size" Value="800,600" />
            <Setter Property="Color" Value="WhiteSmoke" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="CanBeDismissedByTappingOutsideOfPopup" Value="False" />
        </Style>
    </toolkit:Popup.Resources>
    <BlazorWebView x:Name="blazorWebView" 
              HostPage="wwwroot/index.html" IsVisible="{Binding DisplayWebview}">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type pages:ProjectDashboard}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>
</toolkit:Popup>