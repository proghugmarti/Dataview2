<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:DataView2.Pages.Map"
             x:Class="DataView2.XAML.EditCracksContainer">
    <Border
     WidthRequest="500"
     HeightRequest="350"
     Padding="5"
     Stroke="Gray" StrokeThickness="1" Background="White">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <BlazorWebView HostPage="wwwroot/index.html" IsVisible="true">
            <BlazorWebView.RootComponents>
                <RootComponent Selector="#app" ComponentType="{x:Type pages:EditCrackInfo}"/>
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </Border>
</ContentView>
