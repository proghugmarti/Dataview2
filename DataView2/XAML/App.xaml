<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DataView2"
             x:Class="DataView2.App">
    <Application.Resources>

        
            <ResourceDictionary>
            <OnPlatform x:TypeArguments="x:String" x:Key="font-awesome">
                    <On Platform="Android, iOS, WinUI" Value="font-awesome.ttf"/>
                </OnPlatform>

            <OnPlatform x:TypeArguments="x:String" x:Key="Lexend">
                <On Platform="Android, iOS, WinUI" Value="Lexend.ttf"/>
            </OnPlatform>

            <Color x:Key="PageBackgroundColor">#512bdf</Color>
            <Color x:Key="PrimaryTextColor">White</Color>
            
            <Style TargetType="Label">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="FontFamily" Value="OpenSansRegular" />
            </Style>

            <Style TargetType="Button">
                <Style.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="Scale" Value="0.95" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style TargetType="CheckBox">
                <Style.Triggers>
                    <Trigger TargetType="CheckBox" Property="IsChecked" Value="True">
                        <Setter Property="Color" Value="#512bdf" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="IconStyle" TargetType="Button">
                <Style.Setters>
                    <Setter Property="FontFamily" Value="font-awesome" />
                    <Setter Property="FontSize" Value="18" />
                </Style.Setters>
            </Style>

            <Style x:Key="CalciteStyle" TargetType="Button">
                <Style.Setters>
                    <Setter Property="FontFamily" Value="calcite-ui-icons-24" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontAttributes" Value="Bold" />
                </Style.Setters>
            </Style>

            <Style x:Key="CalciteLabelStyle" TargetType="Label">
                <Style.Setters>
                    <Setter Property="FontFamily" Value="calcite-ui-icons-24" />
                    <Setter Property="FontSize" Value="20" />
                    <Setter Property="FontAttributes" Value="Bold" />
                </Style.Setters>
            </Style>

            <Style x:Key="InterStyle" TargetType="Button">
                <Style.Setters>
                    <Setter Property="FontFamily" Value="Inter_18pt-Regular"/>
                </Style.Setters>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>