<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:pages="clr-namespace:DataView2.Pages.SurveyList"
             xmlns:local="clr-namespace:DataView2"
             x:Class="DataView2.SurveySetPopup"
             >
    <toolkit:Popup.Resources>
        <Style TargetType="{x:Type local:SurveySetPopup}">
            <Setter Property="Size" Value="600,300" />
            <Setter Property="Color" Value="Transparent" />
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="CanBeDismissedByTappingOutsideOfPopup" Value="False" />
        </Style>
    </toolkit:Popup.Resources>
    <Border Stroke="Gray" StrokeThickness="1" Background="White">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="10" />
        </Border.StrokeShape>
        <BlazorWebView x:Name="SurveyPopup"  HostPage="wwwroot/index.html" Margin="15">
            <BlazorWebView.RootComponents>
                <RootComponent x:Name="rootComponent" Selector="#app" ComponentType="{x:Type pages:SurveyDialog }"/>
            </BlazorWebView.RootComponents>
        </BlazorWebView>
    </Border>
</toolkit:Popup>